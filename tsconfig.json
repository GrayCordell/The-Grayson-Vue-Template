{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "./build",

    "types": [
      "unplugin-icons/types/vue",
      "vitest",
      "vite/client",
      "@types/node"
    ],
    "paths": {
      "~/*": ["src/*"],
      "flexsearch": ["node_modules/@types/flexsearch"]
    }
  },
  "vueCompilerOptions": {
    "plugins": []
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": [
    "dist", "node_modules", "cypress",
    "./src/assets/**/*",
    "build", "./built/**/*", "docs", "./plugins/**/*",
    "./typings/**/*", "test/Input", "test/Output",
    "test/Intermediate", "public", "locales"
  ]
}
